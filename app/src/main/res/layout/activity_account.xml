<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/evcs_gray_89">

    <org.evcs.android.ui.view.shared.EVCSToolbar
        android:id="@+id/fragment_account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/activity_account_title"
        app:navigationIcon="@drawable/back_arrow"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/evcs_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium_extra"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_account_email"/>

            <TextView
                android:id="@+id/fragment_account_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="javier@evcs.com"
                android:textColor="@color/evcs_black"
                style="@style/Roboto.Body"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_tiniest"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:background="@color/evcs_purple_gray"/>

        <RelativeLayout
            android:id="@+id/fragment_account_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium_extra">

            <TextView
                android:id="@+id/fragment_account_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_account_name" />

            <TextView
                android:id="@+id/fragment_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Javier"
                android:textColor="@color/evcs_black"
                android:layout_below="@id/fragment_account_name_label"
                style="@style/Roboto.Body"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/black_chevron" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_tiniest"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:background="@color/evcs_purple_gray"/>

        <TextView
            android:id="@+id/fragment_account_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/activity_account_change_password"
            android:padding="@dimen/spacing_medium_extra"
            android:drawableEnd="@drawable/black_chevron"
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_black"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing_large" />

    <TextView
        android:id="@+id/fragment_account_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/evcs_red"
        android:padding="@dimen/spacing_medium_extra"
        android:background="@color/evcs_white"
        android:text="@string/activity_account_sign_out"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/fragment_account_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/spacing_medium_extra"
        android:text="@string/activity_account_delete_account"/>

</LinearLayout>