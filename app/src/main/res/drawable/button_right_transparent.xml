<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <corners   android:bottomRightRadius="@dimen/button_radius"
                       android:topRightRadius="@dimen/button_radius"/>
            <solid android:color="@color/evcs_dark_grey"/>
            <stroke
                android:width="@dimen/spacing_tiny"
                android:color="@color/evcs_grey"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:bottomRightRadius="@dimen/button_radius"
                     android:topRightRadius="@dimen/button_radius"/>
            <solid android:color="@color/evcs_green"/>
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners   android:bottomRightRadius="@dimen/button_radius"
                       android:topRightRadius="@dimen/button_radius"/>
            <solid android:color="@color/evcs_dark_grey"/>
            <stroke
                android:width="@dimen/spacing_tiny"
                android:color="@color/evcs_green"/>
        </shape>
    </item>

</selector>