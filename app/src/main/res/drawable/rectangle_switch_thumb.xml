<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp"
    android:top="2dp">
<selector>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/evcs_white"/>
            <size
                android:width="@dimen/switch_rectangle_thumb_width"
                android:height="@dimen/switch_rectangle_thumb_height"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/evcs_gray_300"/>
            <size
                android:width="@dimen/switch_rectangle_thumb_width"
                android:height="@dimen/switch_rectangle_thumb_height"/>
        </shape>
    </item>

</selector>
</item>
</layer-list>