<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_selector_black_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_large"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_medium_extra">

        <TextView
            android:id="@+id/view_list_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_button_selector"
            style="@style/SansationRegular.MediumMore" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/list_button_icon_selector" />

    </RelativeLayout>

    <View
        android:id="@+id/view_list_button_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tiniest"
        android:background="@android:color/darker_gray" />

</LinearLayout>
