<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5a091018"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/evcs_dialog_fragment_layout"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_ariel_inner"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/layout_dialog_background">

        <TextView
            android:id="@+id/evcs_dialog_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium_extra"
            android:gravity="center"
            android:textColor="@color/evcs_black"
            style="@style/Title.Large"/>

        <TextView
            android:id="@+id/evcs_dialog_fragment_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_ariel_different"
            style="@style/Body.Medium.Black"/>

    </LinearLayout>

</LinearLayout>
