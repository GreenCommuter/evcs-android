<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/evcs_white">

    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_toolbar_bottom_extra"
        app:title="@string/activity_account_title"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/evcs_white"
        android:padding="@dimen/padding_ariel_standard">

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="@string/activity_account_name"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="@string/register_email"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="@string/register_password"
            app:text="••••••••"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="@string/my_information_phone_number"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/fragment_account_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/spacing_medium_extra"
        android:text="@string/activity_account_delete_account"/>

</LinearLayout>