<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bb000000"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/greencommuter_dialog_fragment_layout"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_ariel_inner"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/layout_dialog_background_new">

        <TextView
            android:id="@+id/greencommuter_dialog_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_ariel_related"
            android:gravity="center"
            style="@style/RobotoBold.SectionTitle"/>

        <TextView
            android:id="@+id/greencommuter_dialog_fragment_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_ariel_different"
            android:gravity="center"
            style="@style/RobotoBold.Body.Grey"/>

    </LinearLayout>

</LinearLayout>
