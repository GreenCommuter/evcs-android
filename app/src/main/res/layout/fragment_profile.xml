<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.evcs.android.ui.view.shared.EVCSToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/profile_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_large"
        android:background="@color/evcs_dark_purple">

        <TextView
            android:id="@+id/profile_menu_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_change_password"
            android:drawableLeft="@drawable/ic_account"
            android:textColor="@color/evcs_white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_medium_extra"
            android:paddingBottom="@dimen/spacing_medium_extra"
            android:drawablePadding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <include layout="@layout/purple_grey_line"/>

        <TextView
            android:id="@+id/profile_menu_payments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_billing_information"
            android:drawableLeft="@drawable/ic_payments"
            android:textColor="@color/evcs_white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_medium_extra"
            android:paddingBottom="@dimen/spacing_medium_extra"
            android:drawablePadding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <include layout="@layout/purple_grey_line"/>

        <TextView
            android:id="@+id/profile_menu_subscription_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_employer"
            android:drawableLeft="@drawable/ic_subscription"
            android:textColor="@color/evcs_white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_medium_extra"
            android:paddingBottom="@dimen/spacing_medium_extra"
            android:drawablePadding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <include layout="@layout/purple_grey_line"/>

        <TextView
            android:id="@+id/profile_menu_charging_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charging history"
            android:drawableLeft="@drawable/ic_map_pin_unselected"
            android:textColor="@color/evcs_white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_medium_extra"
            android:paddingBottom="@dimen/spacing_medium_extra"
            android:drawablePadding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <include layout="@layout/purple_grey_line"/>

        <TextView
            android:id="@+id/profile_menu_evcs_terms_and_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EVCS Terms and Conditions"
            android:drawableLeft="@drawable/ic_map_pin_unselected"
            android:textColor="@color/evcs_white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_medium_extra"
            android:paddingBottom="@dimen/spacing_medium_extra"
            android:drawablePadding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <include layout="@layout/purple_grey_line"/>

        <TextView
            android:id="@+id/profile_menu_call_customer_care"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Customer Care (866)300-EVCS"
            android:drawableLeft="@drawable/ic_call"
            android:textColor="@color/evcs_white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_medium_extra"
            android:paddingBottom="@dimen/spacing_medium_extra"
            android:drawablePadding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <include layout="@layout/purple_grey_line"/>

        <TextView
            android:id="@+id/profile_menu_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give Feedback"
            android:drawableLeft="@drawable/ic_feedback"
            android:textColor="@color/evcs_white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_medium_extra"
            android:paddingBottom="@dimen/spacing_medium_extra"
            android:drawablePadding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <include layout="@layout/purple_grey_line"/>

        <TextView
            android:id="@+id/profile_menu_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 0.0.0"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_medium"
            style="@style/RobotoBold.Body"/>

        <TextView
            android:id="@+id/profile_menu_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_medium"
            android:textColor="@color/evcs_red"
            style="@style/RobotoBold.Body"/>

    </LinearLayout>

</LinearLayout>