<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_medium_extra"
    android:paddingStart="@dimen/spacing_medium_more">

    <TextView
        android:id="@+id/adapter_search_name"
        style="@style/Roboto.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_large"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="WCEH THE Dalles" />

    <TextView
        android:id="@+id/adapter_search_address"
        style="@style/Roboto.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_search_name"
        android:layout_marginBottom="@dimen/spacing_medium_extra"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/evcs_grey"
        tools:text="1215 W 6h St, The Dalles, OR 97058" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/adapter_search_address"
        android:layout_alignStart="@id/adapter_search_name"/>

    <TextView
        android:id="@+id/adapter_search_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:layout_marginEnd="@dimen/spacing_large"
        android:drawableLeft="@drawable/ic_go"
        android:drawablePadding="@dimen/spacing_medium"
        android:text="Go"
        style="@style/Button.Blue"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tiniest"
        android:background="@color/evcs_gray_100"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
