<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_location_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/font_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        style="@style/Title.Large"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium_extra">

        <TextView
            android:id="@+id/view_location_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:drawablePadding="@dimen/spacing_medium"
            android:layout_gravity="center_vertical"
            android:textColor="@color/evcs_gray_600"
            style="@style/Body.Large"/>

        <TextView
            android:id="@+id/view_location_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_go"
            android:text="Go"
            android:layout_gravity="end"
            style="@style/ButtonK.Blue"/>

    </FrameLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/view_location_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_profile_header"
        android:paddingBottom="@dimen/spacing_medium_extra"/>

    <TextView
        android:id="@+id/view_location_gatecode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:textAllCaps="true"
        android:textStyle="bold"
        style="@style/Body.ExtraSmall"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/view_location_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:text="HARDCODED: Chargers located at the northwest corner of the Palmdale Park &amp; Ride lot."
        style="@style/Body.Small"/>

    <TextView
        android:id="@+id/view_location_type_price_dc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_medium"
        style="@style/Body.Small"/>

    <TextView
        android:id="@+id/view_location_type_price_ac"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_medium"
        style="@style/Body.Small"/>

    <TextView
        android:id="@+id/view_location_start_charging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_charging_button"
        android:layout_margin="0dp"
        style="@style/ButtonK.OrangeOutline"/>

    <LinearLayout
        android:id="@+id/view_location_connectors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:orientation="vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_large">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/evcs_purple_gray"/>

        <TextView
            android:id="@+id/activity_location_open_hours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:paddingTop="@dimen/padding_ariel_standard"
            android:paddingBottom="@dimen/padding_ariel_standard"
            android:drawablePadding="@dimen/spacing_medium"
            android:text="24 hours (Open hours may differ based on circumstances at the location.)"
            android:drawableLeft="@drawable/ic_clock"
            style="@style/Roboto.Body"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/evcs_purple_gray"/>

    </LinearLayout>

</LinearLayout>