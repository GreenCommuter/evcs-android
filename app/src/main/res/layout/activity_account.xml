<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/evcs_gray_89">

    <org.evcs.android.ui.view.shared.EVCSToolbar
        android:id="@+id/fragment_account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/activity_account_title"
        app:navigationIcon="@drawable/back_arrow"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/evcs_white">

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="@string/register_email"
            app:showButton="false"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="@string/my_information_phone_number"
            app:showButton="false"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="Name"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="Car"
            app:showButton="true"
            app:bottomDivider="true"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="Zipcode"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/fragment_account_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="Change Password"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing_large" />

    <TextView
        android:id="@+id/fragment_account_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/evcs_red"
        android:padding="@dimen/spacing_medium_extra"
        android:background="@color/evcs_white"
        android:text="@string/activity_account_sign_out"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/fragment_account_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/spacing_medium_extra"
        android:text="@string/activity_account_delete_account"/>

</LinearLayout>