<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/evcs_white"/>
            <corners android:radius="@dimen/button_radius"/>
            <stroke android:width="@dimen/spacing_tiniest"
                android:color="@color/evcs_gray_300"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/evcs_black"/>
            <corners android:radius="@dimen/button_radius"/>
            <stroke android:width="@dimen/spacing_tiny"
                android:color="@color/evcs_primary_600"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/evcs_white"/>
            <corners android:radius="@dimen/button_radius"/>
            <stroke android:width="@dimen/spacing_tiniest"
                android:color="@color/evcs_primary_600"/>
        </shape>
    </item>
</selector>