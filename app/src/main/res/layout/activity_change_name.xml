<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/evcs_white">

    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_toolbar_bottom_extra"
        app:title="@string/activity_account_title" />

    <org.evcs.android.features.shared.StandardTextField
        android:id="@+id/fragment_change_name_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_ariel_standard"
        app:label="First name"
        style="@style/TextInputStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body.Medium"/>

    </org.evcs.android.features.shared.StandardTextField>

    <org.evcs.android.features.shared.StandardTextField
        android:id="@+id/fragment_change_name_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_ariel_standard"
        android:layout_marginEnd="@dimen/padding_ariel_standard"
        android:layout_marginBottom="@dimen/spacing_medium_extra"
        app:label="Last name"
        style="@style/TextInputStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body.Medium"/>

    </org.evcs.android.features.shared.StandardTextField>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/activity_change_name_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium_extra"
        android:text="@string/activity_account_save"
        style="@style/ButtonK.Orange"/>

</LinearLayout>