<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/evcs_dark_purple">

    <org.evcs.android.ui.view.shared.EVCSToolbar
        android:id="@+id/session_information_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Session information"
        app:navigationIcon="@drawable/back_arrow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_ariel_standard">

        <TextView
            android:id="@+id/session_information_charging_site_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_purple_gray"/>

        <TextView
            android:id="@+id/session_information_charging_site_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/session_information_charging_site_date"
            android:text="Payment: credit card  "
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_purple_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="View receipt"
            style="@style/Button.Orange"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColor="@color/evcs_purple_gray"/>

    </RelativeLayout>

    <include layout="@layout/purple_grey_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_ariel_standard">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            style="@style/Roboto.Body"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:textColor="@color/evcs_purple_gray"/>

        <TextView
            android:id="@+id/session_information_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            style="@style/RobotoBold.Body"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="@dimen/spacing_medium"
            android:textColor="@color/evcs_white"/>

    </LinearLayout>

    <include layout="@layout/purple_grey_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_ariel_standard">

        <TextView
            android:id="@+id/session_information_charging_site_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charging Site"
            android:layout_marginBottom="@dimen/spacing_medium"
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_purple_gray"/>

        <ImageView
            android:id="@+id/session_information_charging_site_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/session_information_charging_site_title"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:src="@drawable/ic_clock"/>

        <TextView
            android:id="@+id/session_information_charging_site_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/session_information_charging_site_title"
            android:layout_toEndOf="@id/session_information_charging_site_icon"
            style="@style/RobotoBold.Body"
            android:textColor="@color/evcs_white"
            />

        <TextView
            android:id="@+id/session_information_charging_site_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/session_information_charging_site_subtitle"
            android:layout_toEndOf="@id/session_information_charging_site_icon"
            android:text="Station ID:"
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_white"
            />

        <TextView
            android:id="@+id/session_information_charging_site_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/session_information_charging_site_id"
            android:layout_toEndOf="@id/session_information_charging_site_icon"
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_white"
            />

    </RelativeLayout>

    <include layout="@layout/purple_grey_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_ariel_standard">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Energy Delivered"
            android:layout_marginBottom="@dimen/spacing_medium"
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_purple_gray"/>

        <TextView
            android:id="@+id/session_information_energy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            style="@style/RobotoBold.Body"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="@dimen/spacing_medium"
            android:textColor="@color/evcs_white"/>

    </LinearLayout>

    <include layout="@layout/purple_grey_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_ariel_standard">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Number"
            style="@style/Roboto.Body"
            android:textColor="@color/evcs_purple_gray"/>

    </LinearLayout>

    <include layout="@layout/purple_grey_line"/>

    <TextView
        android:id="@+id/session_information_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_ariel_standard"
        style="@style/RobotoBold.CallToAction"
        android:textColor="@color/evcs_white"/>

    <include layout="@layout/purple_grey_line"/>

    <TextView
        android:id="@+id/session_information_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_ariel_standard"
        android:textColor="@color/evcs_purple_gray"
        style="@style/Roboto.Body" />

</LinearLayout>