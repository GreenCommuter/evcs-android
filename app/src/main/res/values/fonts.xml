<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Sansation Regular styles -->
    <style name="SansationRegular" parent="@android:style/TextAppearance">
        <item name="fontPath">fonts/Sansation-Regular.ttf</item>
    </style>

    <style name="SansationRegular.SmallMore">
        <item name="android:textSize">@dimen/font_small_more</item>
    </style>

    <style name="SansationRegular.SmallMore.Grey">
        <item name="android:textColor">@color/evcs_grey</item>
    </style>

    <!-- Title text styles -->
    <style name="TitleFont" parent="@android:style/TextAppearance">
        <item name="fontPath">fonts/ProximaNova-Bold.otf</item>
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleFont.Large">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="Roboto" parent="@android:style/TextAppearance">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="Roboto.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Roboto.Body.Grey">
        <item name="android:textColor">#514f4d</item>
    </style>

    <style name="Roboto.Body.White">
        <item name="android:textColor">@color/evcs_white</item>
    </style>

<!--    <style name="Roboto.ProfileMenu">-->
<!--        <item name="android:textColor">@color/button_text_color_selector_filled</item>-->
<!--        <item name="android:textSize">21sp</item>-->
<!--        <item name="fontFamily">@font/roboto_regular</item>-->
<!--    </style>-->

    <style name="RobotoBold" parent="@android:style/TextAppearance">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RobotoBold.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Inter" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/evcs_gray_800</item>
        <item name="android:textStyle">normal</item>
        <!--        <item name="android:fontFamily">inter</item>-->
    </style>

    <style name="Display" parent="Inter"/>

    <style name="Display.Large">
        <item name="android:textSize">57sp</item>
        <item name="android:minHeight">64sp</item>
    </style>

    <style name="Display.Medium">
        <item name="android:textSize">45sp</item>
        <item name="android:minHeight">52sp</item>
    </style>

    <style name="Display.Small">
        <item name="android:textSize">36sp</item>
        <item name="android:minHeight">44sp</item>
    </style>

    <style name="Headline" parent="Inter"/>

    <style name="Headline.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:minHeight">40sp</item>
    </style>

    <style name="Headline.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:minHeight">36sp</item>
    </style>

    <style name="Headline.Small">
        <item name="android:textSize">24sp</item>
        <item name="android:minHeight">32sp</item>
    </style>

    <style name="Title" parent="Inter">
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:minHeight">28sp</item>
    </style>

    <style name="Title.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">24sp</item>
        <item name="android:letterSpacing">0.00936</item>
    </style>

    <style name="Title.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">20sp</item>
        <item name="android:letterSpacing">0.00624</item>
    </style>

    <style name="Label" parent="Inter">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">20sp</item>
        <item name="android:letterSpacing">0.00624</item>
    </style>

    <style name="Label.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">18sp</item>
        <item name="android:letterSpacing">0.0312</item>
    </style>

    <style name="Label.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">16sp</item>
        <item name="android:letterSpacing">0.0312</item>
    </style>

    <style name="TextButton" parent="Label.Small"/>

    <style name="TextButton.Blue">
        <item name="android:textColor">@color/evcs_secondary_700</item>
    </style>

    <style name="Body" parent="Inter"/>

    <style name="Body.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">24sp</item>
        <item name="android:letterSpacing">0.0312</item>
    </style>

    <style name="Body.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">26sp</item>
        <item name="android:letterSpacing">0.0156</item>
    </style>

    <style name="Body.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body.Medium.Black">
        <item name="android:textColor">@color/evcs_black</item>
    </style>

    <style name="Body.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">22sp</item>
        <item name="android:letterSpacing">0.02496</item>
    </style>

    <style name="Body.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body.ExtraSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">16sp</item>
        <item name="android:letterSpacing">0.02496</item>
    </style>

    <style name="WebBody" parent="Inter"/>

    <style name="WebBody.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:minHeight">32sp</item>
        <item name="android:letterSpacing">0.0312</item>
    </style>

    <style name="WebBody.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">28sp</item>
        <item name="android:letterSpacing">0.0156</item>
    </style>

    <style name="WebBody.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">20sp</item>
        <item name="android:letterSpacing">0.2496</item>
    </style>

    <style name="ProfileSection" parent="Label.Large">
        <item name="android:layout_marginTop">@dimen/spacing_big</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/evcs_black</item>
    </style>

    <style name="EmptyView" parent="Body.Medium.Bold">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_medium_extra</item>
        <item name="android:textColor">#7A7F85</item>
        <item name="android:background">@drawable/layout_corners_rounded_empty_view</item>
    </style>

</resources>
