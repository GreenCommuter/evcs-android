<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_large"
    android:layout_marginBottom="@dimen/spacing_large"
    android:background="@drawable/layout_corners_rounded_blue_outline"
    android:orientation="vertical">

    <TextView
        android:id="@+id/station_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        style="@style/Body.Small.Bold"
        android:textColor="@color/evcs_gray_600" />

    <TextView
        android:id="@+id/station_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large_extra"
        android:paddingBottom="@dimen/spacing_tiny"
        style="@style/Body.Medium.Bold"/>

    <LinearLayout
        android:id="@+id/station_connectors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

</LinearLayout>