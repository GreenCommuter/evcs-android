<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/evcs_dark_purple"
    android:orientation="vertical">

    <org.evcs.android.ui.view.shared.EVCSToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/status_bar_height"
        app:title="@string/charging_in_progress_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        android:background="@color/evcs_light_orange"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charging_in_progress_kwh"
            android:layout_marginBottom="@dimen/spacing_small"
            android:textColor="@color/evcs_white"/>

        <TextView
            android:id="@+id/charging_in_progress_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_huge"
            android:textColor="@color/evcs_white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/evcs_light_orange"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_tiniest"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="@string/charging_in_progress_duration"
            android:textColor="@color/evcs_white"/>

        <TextView
            android:id="@+id/charging_in_progress_session_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_huge"
            android:textColor="@color/evcs_white"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/spacing_medium_extra">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/evcs_purple_gray"
            android:text="@string/charging_in_progress_status"/>

        <TextView
            android:id="@+id/charging_in_progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/evcs_white"
            android:text="Charging"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:id="@+id/charging_in_progress_status_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toStartOf="@+id/charging_in_progress_status"
            android:src="@drawable/ic_bolt_solid"
            app:tint="@color/evcs_white"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/spacing_medium"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tiniest"
        android:background="@color/evcs_purple_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/evcs_purple_gray"
        android:text="@string/charging_in_progress_site"
        android:padding="@dimen/spacing_medium_extra"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_medium_extra"
        android:paddingStart="@dimen/spacing_medium_extra"
        android:paddingEnd="@dimen/spacing_medium_extra"
        >

        <ImageView
            android:id="@+id/charging_in_progress_site_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium_more"
            android:src="@drawable/ic_map_pin_unselected"/>

        <TextView
            android:id="@+id/charging_in_progress_site_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="Noodoe Charging Site"
            android:textColor="@color/evcs_white"
            android:layout_toEndOf="@id/charging_in_progress_site_icon"
            style="@style/RobotoBold.Body"
            />

        <TextView
            android:id="@+id/charging_in_progress_site_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/charging_in_progress_site_icon"
            android:text="Station ID: "
            android:layout_below="@id/charging_in_progress_site_name"
            style="@style/Roboto.Body.White"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/charging_in_progress_last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_toEndOf="@id/charging_in_progress_site_icon"
        android:text="Last update: "
        android:layout_below="@id/charging_in_progress_site_name"
        style="@style/Roboto.Body.White"
        />

</LinearLayout>