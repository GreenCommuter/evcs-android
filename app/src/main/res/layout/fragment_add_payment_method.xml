<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/evcs_white">

    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:id="@+id/add_payment_method_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_toolbar_bottom_extra"
        app:title="Add Payment Method"/>

    <org.evcs.android.ui.view.shared.PaymentMethodView
        android:id="@+id/add_payment_method_gpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_ariel_standard"
        android:layout_marginLeft="@dimen/padding_ariel_standard"
        android:layout_marginRight="@dimen/padding_ariel_standard"/>

    <org.evcs.android.ui.view.shared.PaymentMethodView
        android:id="@+id/add_payment_method_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_ariel_standard"
        android:layout_marginRight="@dimen/padding_ariel_standard"/>

</LinearLayout>