<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/evcs_purple"
    android:padding="@dimen/spacing_medium_more">

    <ImageView
        android:id="@+id/fragment_search_location_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingLeft="@dimen/spacing_medium_more"
        android:paddingRight="@dimen/spacing_medium_more"
        android:src="@drawable/ic_xmark_solid"/>

    <org.evcs.android.ui.view.shared.FilterableAutocompleteTextView
        android:id="@+id/fragment_search_location_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:drawableStart="@drawable/ic_magnifying_glass_solid"
        android:paddingStart="@dimen/spacing_medium_more"
        android:drawablePadding="@dimen/spacing_medium"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_big"
        android:hint="@string/search_activity_hint"
        android:inputType="textPostalAddress"
        android:textColorHint="@color/evcs_grey"
        style="@style/SansationRegular.MediumMore"
        android:textColor="@color/evcs_white"
        android:background="@drawable/layout_corners_rounded_purple_orange_border"/>

