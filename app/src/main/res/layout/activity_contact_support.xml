<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/evcs_white">

    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_toolbar_bottom_extra"
        app:title="@string/profile_support_contact"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/evcs_white"
        android:padding="@dimen/spacing_medium_extra">

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/contact_support_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="Support phone number"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/contact_support_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="Report an issue"/>

        <org.evcs.android.ui.view.profile.ListButtonView
            android:id="@+id/contact_support_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lbv_label="Address"
            app:text="11800 Clark St. Arcadia, CA 91006"/>

    </LinearLayout>


</LinearLayout>