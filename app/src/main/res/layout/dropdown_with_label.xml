<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <RelativeLayout
        android:id="@+id/dropdow_with_label_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_medium"
        android:paddingStart="@dimen/padding_ariel_standard"
        android:paddingTop="@dimen/spacing_medium_more"
        android:paddingBottom="@dimen/spacing_medium_more"
        android:background="@drawable/layout_corners_rounded_grey_border">

        <Spinner
            android:id="@+id/dropdow_with_label_dropdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:background="@color/evcs_transparent"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:scaleType="fitXY"
            android:src="@drawable/ic_dropdow_arrow"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/dropdow_with_label_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        android:background="@color/evcs_white"
        style="@style/Roboto.BodySmall.Grey"/>

</RelativeLayout>
