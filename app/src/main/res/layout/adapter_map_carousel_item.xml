<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/map_bottom_padding"
    android:layout_marginRight="@dimen/negative_spacing_medium"
    android:layout_marginLeft="@dimen/negative_spacing_medium"
    android:padding="@dimen/spacing_large"
    android:gravity="center"
    android:background="@drawable/layout_corners_rounded_purple">

    <TextView
        android:id="@+id/adapter_map_distance"
        style="@style/Roboto.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/evcs_purple_gray"
        tools:text="-- mi" />

    <TextView
        android:id="@+id/adapter_map_name"
        style="@style/RobotoBold.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/evcs_white"
        tools:text="WCEH THE DAlles" />

    <TextView
        android:id="@+id/adapter_map_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_map_name"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:textColor="@color/evcs_purple_gray"
        style="@style/Roboto.Body"
        tools:text="1215 W 6h St, The Dalles, OR 97058" />

</RelativeLayout>
