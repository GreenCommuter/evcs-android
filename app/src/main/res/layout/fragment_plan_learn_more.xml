<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:id="@+id/plan_learn_more_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_toolbar_bottom_extra"/>

    <WebView
        android:id="@+id/plan_learn_more_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:gravity="center"
        android:padding="@dimen/spacing_medium_extra"
        android:background="@drawable/layout_station_view_background"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get 30 Days free when you upgrade to the Standard Plan."
            android:layout_marginBottom="@dimen/spacing_large_k"
            android:gravity="center"
            style="@style/Body.Medium"/>

        <TextView
            android:id="@+id/plans_learn_more_explore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="@string/plan_info_explore_plans"
            style="@style/ButtonK.BlackOutline"/>

    </LinearLayout>

    <TextView
        android:id="@+id/plan_learn_more_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_large"
        style="@style/ButtonK.Orange"/>

</LinearLayout>