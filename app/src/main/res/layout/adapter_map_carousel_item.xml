<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/negative_spacing_medium"
    android:layout_marginLeft="@dimen/negative_spacing_medium"
    android:padding="@dimen/spacing_medium_extra"
    android:gravity="center"
    android:background="@drawable/layout_corners_rounded_red">

    <TextView
        android:id="@+id/adapter_map_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="@style/Roboto.Body.Grey"
        tools:text="-- mi" />

    <TextView
        android:id="@+id/adapter_map_name"
        style="@style/SansationRegular.MediumMore.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="WCEH THE DAlles" />

    <TextView
        android:id="@+id/adapter_map_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_map_name"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/Roboto.Body.Grey"
        tools:text="1215 W 6h St, The Dalles, OR 97058" />

</RelativeLayout>
