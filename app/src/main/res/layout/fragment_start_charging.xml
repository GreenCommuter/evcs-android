<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/start_charging_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_ariel_standard"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/start_charging_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium_extra"
            android:layout_marginBottom="@dimen/spacing_big_k"
            android:src="@drawable/charging_scene"/>

        <TextView
            android:id="@+id/start_charging_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_charging_preparing"
            android:layout_marginBottom="@dimen/spacing_medium_extra"
            android:textColor="@color/evcs_black"
            style="@style/Body.Large.Bold"/>

        <TextView
            android:id="@+id/start_charging_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_charging_preparing_subtitle"
            style="@style/Body.Medium.Black"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/start_charging_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_cancel"
            style="@style/ButtonK.BlackOutline"/>

    </LinearLayout>

</LinearLayout>