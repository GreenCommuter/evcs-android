<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_selector_black_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium_extra">

        <TextView
            android:id="@+id/view_list_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/view_list_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_button_selector"
            android:layout_below="@id/view_list_button_label"
            style="@style/Roboto.Body" />

        <ImageView
            android:id="@+id/view_list_button_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/list_button_icon_selector" />

    </RelativeLayout>

    <View
        android:id="@+id/view_list_button_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tiniest"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="@dimen/spacing_medium_extra"/>

</LinearLayout>
