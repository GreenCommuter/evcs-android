<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<!--    android:background="@drawable/button_selector_black_transparent"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medium_extra"
        android:paddingBottom="@dimen/spacing_medium_extra">

        <TextView
            android:id="@+id/view_list_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title.Medium"/>

        <TextView
            android:id="@+id/view_list_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_button_selector"
            android:layout_below="@id/view_list_button_label"
            style="@style/Body.Small"/>

        <ImageView
            android:id="@+id/view_list_button_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/evcs_gray_400"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_list_button_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tiniest"
        android:background="@color/evcs_gray_100"/>

</LinearLayout>
