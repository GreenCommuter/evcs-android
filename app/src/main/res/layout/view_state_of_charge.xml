<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/state_of_charge_title"
        android:textColor="@color/evcs_gray_300"
        android:layout_marginBottom="@dimen/spacing_medium"
        style="@style/Label.Small"/>

    <SeekBar
        android:id="@+id/view_state_of_carge_bar"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:progress="2"
        android:secondaryProgress="5"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progressDrawable="@drawable/double_progress_bar_bar"
        android:max="102"
        android:thumb="@drawable/double_progress_bar_thumb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/view_state_of_carge_not_supported"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/evcs_gray_400"
        android:text="@string/state_of_charge_unsupported" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/spacing_medium">

        <TextView
            android:id="@+id/view_state_of_charge_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start 23%"
            style="@style/Body.Small.Bold"/>

        <TextView
            android:id="@+id/view_state_of_charge_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Current 55%"
            style="@style/Body.Small.Bold"/>

    </FrameLayout>

</LinearLayout>