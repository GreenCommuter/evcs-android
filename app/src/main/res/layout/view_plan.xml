<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_medium_extra"
    android:orientation="vertical"
    android:gravity="center">
    
    <TextView
        android:id="@+id/view_plan_freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        tools:text="I charge publicly 7+ times/mo"
        style="@style/Title.Medium"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium_extra"
        android:background="@drawable/layout_corners_rounded_grey_border"
        android:paddingTop="@dimen/spacing_huge"
        app:strokeColor="#C1CBD0"
        app:strokeWidth="@dimen/spacing_tiniest"
        app:cardCornerRadius="@dimen/default_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_big"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_plan_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium_extra"
                android:gravity="center"
                android:background="#FFEBE5"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/evcs_primary_800"
                tools:text="Most popular"
                android:visibility="invisible"
                style="@style/Body.Small.Bold"/>

            <TextView
                android:id="@+id/view_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium_extra"
                tools:text="Unlimited Off-peak"
                style="@style/Body.Large.Bold"/>

            <TextView
                android:id="@+id/view_plan_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                tools:text="$99.99/mo"
                style="@style/Headline.Large"/>

            <TextView
                android:id="@+id/view_plan_limits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:gravity="center"
                tools:text="Unlimited charging 10PM-6AM"
                style="@style/Title.Large"/>

            <TextView
                android:id="@+id/view_plan_limit_aprox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evcs_gray_600"
                tools:text="Approximately 760 miles"
                style="@style/Body.Small"/>

            <TextView
                android:id="@+id/view_plan_flat_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evcs_gray_600"
                android:layout_marginTop="@dimen/spacing_large_k"
                android:layout_marginBottom="@dimen/spacing_medium"
                tools:text="Flat rate 6AM-10PM"
                style="@style/Body.Small.Bold"/>

            <TextView
                android:id="@+id/view_plan_dc_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evcs_gray_600"
                android:layout_marginBottom="@dimen/spacing_medium"
                tools:text="DC Fast: $0.32/kWh"
                style="@style/Body.Small.Bold"/>

            <TextView
                android:id="@+id/view_plan_ac_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evcs_gray_600"
                tools:text="Level 2: $0.32/kWh"
                style="@style/Body.Small.Bold"/>

            <TextView
                android:id="@+id/view_plan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large_k"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginLeft="@dimen/spacing_medium_extra"
                android:layout_marginRight="@dimen/spacing_medium_extra"
                tools:text="Get 7 Days Free"
                style="@style/ButtonK.Orange"/>

            <TextView
                android:id="@+id/view_plan_learn_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plan_view_learn_more"
                style="@style/ButtonK"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    
</LinearLayout>
