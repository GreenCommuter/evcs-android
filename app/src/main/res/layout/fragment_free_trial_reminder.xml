<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_big_extra_k"
        android:layout_marginTop="78dp"
        android:text="Free Trial Reminder!"
        android:layout_gravity="center_horizontal"
        style="@style/Title.Large"/>

    <TextView
        android:id="@+id/free_trial_reminder_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium_extra"
        android:layout_marginEnd="@dimen/spacing_medium_extra"
        android:layout_marginBottom="@dimen/spacing_big_extra_k"
        android:text="You have 16 of 30 kWh remaining in your Free Trial."
        style="@style/Body.Medium"/>


    <TextView
        android:id="@+id/free_trial_reminder_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium_extra"
        android:layout_marginEnd="@dimen/spacing_medium_extra"
        android:text="If this charging sessions exceeds 16 kWh, you will be automatically billed for the first monthly installment of $199.99 for your Unlimited Anytime Plan."
        style="@style/Body.Medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/free_trial_reminder_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium_extra"
        android:text="Agree &amp; Continue"
        style="@style/ButtonK.Orange"
        />

</LinearLayout>