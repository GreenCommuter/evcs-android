<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge"/>

    <!-- For old versions -->
    <style name="AppTheme.Transparent"/>

    <style name="SplashTheme" parent="AppTheme.Transparent">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/evcs_orange</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo_white_splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme.Transparent</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonMargins">
        <!-- This margin is added to provide enough space for the shadow -->
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/spacing_big</item>
        <item name="android:paddingRight">@dimen/spacing_big</item>
    </style>

    <style name="ButtonK" parent="ButtonMargins">
        <item name="android:textSize">@dimen/font_medium_more</item>
        <item name="android:minHeight">20sp</item>
        <item name="android:letterSpacing">0.0156</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/list_button_selector</item>
    </style>

    <style name="ButtonK.Orange">
        <item name="android:background">@drawable/layout_corners_rounded_orange</item>
        <item name="android:textColor">@color/button_text_color_selector_filled</item>
    </style>

    <style name="ButtonK.OrangeOutline">
        <item name="android:background">@drawable/layout_corners_rounded_orange_outline</item>
        <item name="android:textColor">@color/button_text_color_selector_orange_outline</item>
    </style>

    <style name="ButtonK.Blue">
        <item name="android:background">@drawable/layout_corners_rounded_blue</item>
        <item name="android:textColor">@color/button_text_color_selector_filled</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
    </style>

    <style name="ButtonK.BlueOutline">
        <item name="android:background">@drawable/layout_corners_rounded_blue_outline</item>
        <item name="android:textColor">@color/button_text_color_selector_blue_outline</item>
    </style>

    <style name="ButtonK.Danger">
        <item name="android:background">@drawable/layout_corners_rounded_danger</item>
        <item name="android:textColor">@color/button_text_color_selector_filled</item>
    </style>

    <style name="ButtonK.DangerOutline">
        <item name="android:background">@drawable/layout_corners_rounded_red_border</item>
        <item name="android:textColor">@color/button_text_color_selector_red_outline</item>
    </style>

    <style name="ButtonK.BlackOutline">
        <item name="android:background">@drawable/layout_corners_rounded_black_outline</item>
        <item name="android:textColor">@color/button_text_color_selector_black_outline</item>

    </style>

    <style name="Chip" parent="Label.Medium">
    </style>

    <style name="Chip.Small">
        <item name="android:background">@drawable/layout_chip</item>
        <item name="android:textColor">@color/evcs_white</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="ChipStandard" parent="Widget.Design.TextInputLayout">
        <item name="android:width">68dp</item>
        <item name="android:background">@drawable/layout_chip</item>
        <item name="android:textColor">@color/button_text_color_selector_chip</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>

        <!-- Label.Medium-->
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/font_medium_more</item>
        <item name="lineHeight">@dimen/font_medium_extra</item>
        <item name="android:letterSpacing">0.0312</item>
    </style>

    <style name="Banner">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_ariel_standard</item>
    </style>

    <style name="Banner.Red">
        <item name="android:background">@drawable/layout_corners_rounded_danger</item>
        <item name="android:backgroundTint">#FFEBE8</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/input_field_floating_label</item>
    </style>

    <style name="StandardEditText" parent="@style/Body.Medium">
        <item name="android:textColorHint">@color/evcs_gray_400</item>
    </style>

<!--    <style name="NavigationViewStyle">-->
<!--        <item name="android:listPreferredItemHeightSmall">34dp</item>-->
<!--        <item name="itemTextAppearance">@style/Roboto.ProfileMenu</item>-->
<!--    </style>-->

    <style name="BottomNavigationView">
        <item name="android:layout_height">86dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="itemIconTint">@color/icon_color_selector</item>
        <item name="itemTextColor">@color/icon_color_selector</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigation.ActiveItemTextAppearance</item>
        <item name="backgroundTint">@color/evcs_white</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Body.Medium.WithCheck">
        <item name="android:drawableStart">@drawable/ic_check</item>
        <item name="android:drawablePadding">@dimen/spacing_medium_extra</item>
    </style>

    <style name="CheckBox" parent="AppTheme">
        <item name="colorAccent">@color/evcs_secondary_700</item>
        <item name="android:textColorSecondary">#61686E</item>
    </style>

</resources>
