<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medium_extra"
        android:paddingBottom="@dimen/spacing_medium_extra"
        android:gravity="center">

        <ImageView
            android:id="@+id/credit_card_provider"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_marginEnd="@dimen/spacing_medium" />

        <TextView
            android:id="@+id/credit_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_button_selector"
            style="@style/Title.Medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/credit_card_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/manage_plan_change_pm"
            android:visibility="gone"
            style="@style/TextButton.Blue"/>

        <ImageView
            android:id="@+id/credit_card_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_large_extra"
            app:tint="@color/evcs_secondary_700"
            android:src="@drawable/ic_check" />

        <ImageView
            android:id="@+id/view_list_button_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right" />

    </LinearLayout>

    <include layout="@layout/divider"/>

</LinearLayout>
