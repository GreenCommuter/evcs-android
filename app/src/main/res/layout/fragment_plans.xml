<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/evcs_gray_50">
    
    <org.evcs.android.ui.view.shared.EVCSToolbar2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/profile_account_plans"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_plans_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium_extra"
        android:layout_marginEnd="@dimen/spacing_medium_extra"
        android:layout_marginTop="@dimen/spacing_large"
        android:visibility="gone"/>

    <View
        android:id="@+id/fragment_plans_tab_layout_divider"
        android:layout_marginStart="@dimen/spacing_medium_extra"
        android:layout_marginEnd="@dimen/spacing_medium_extra"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tiniest"
        android:visibility="gone"
        android:background="@color/evcs_gray_100"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_plans_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>