<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_medium_extra"
    android:paddingStart="@dimen/spacing_medium_extra"
    android:background="@color/evcs_dark_purple"
    >

    <ImageView
        android:id="@+id/adapter_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:src="@drawable/ic_search_item" />

    <TextView
        android:id="@+id/adapter_search_name"
        style="@style/Roboto.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_toEndOf="@id/adapter_search_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/evcs_white"
        tools:text="WCEH THE Dalles" />

    <TextView
        android:id="@+id/adapter_search_address"
        style="@style/Roboto.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_search_name"
        android:layout_toEndOf="@id/adapter_search_icon"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/evcs_grey"
        tools:text="1215 W 6h St, The Dalles, OR 97058" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/evcs_white"
        android:layout_below="@id/adapter_search_address"
        android:layout_alignStart="@id/adapter_search_name"
        />

    <ImageView
        android:id="@+id/adapter_search_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:src="@drawable/ic_xmark_solid"
        />

</RelativeLayout>
